def registry = 'https://kmgayathri.jfrog.io'
def imageName = 'https://kmgayathri.jfrog.io/ttrenddocker-docker-local/ttrend'
   def version   = '2.0.2'
pipeline {
    agent {
        node {
            label "slave"
        }
    }
    environment {
            PATH = "/opt/apache-maven-3.8.7/bin:$PATH"
    }
    stages {
        stage ("Clone the code") {
            steps {
                git branch: 'main', url: 'https://github.com/kmGayathri/twittertrend.git'
            }
        }
        stage ("Build the code") {
            steps {
                sh 'mvn clean deploy'
            }
        }
        
         stage(" Docker Build ") {
             steps {
            script {
               
               app = docker.build(imageName+":"+version)
        }
      }
    }
          stage (" Docker Publish "){
            steps {
             script {
              
                docker.withRegistry(registry, 'Jfrog-for-jenkins'){
                    app.push()
                }    
           
            }
        }
    }
           
       }
    }   

        
